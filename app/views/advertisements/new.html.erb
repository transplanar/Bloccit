<h1>The Post Your Own Ad!</h1>

<div class="row">
    <div class="col-md-4">
        <p>Tell us about your awesome product or service!</p>
    </div>
    
   <div class="col-md-8">
        <%= form_for @advertisement do |ad| %>
            <div class="form-group">
                <%= ad.label :title %>
                <%= ad.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
            </div>
            <div class="form-group">
                <%= ad.label :copy %>
                <%= ad.text_area :copy, rows: 4, class: 'form-control', placeholder: "Enter ad body" %>
            </div>
            <div class="form-group">
                <%= ad.label :price %>
                <%= ad.text_area :price, class: 'form-control', placeholder: "Enter ad price" %>
            </div>
            <div class="form-group">
                <%= ad.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>