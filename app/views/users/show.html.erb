<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = User.avatar_url(@user, 128) %>
      <% unless avatar_url.nil? %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
          <%= pluralize(@user.favorites.count, 'favorite') %>
        </small>
      </div>
    </div>
  </div>
</div>

<% if has_posts(@user) %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% else  %>
  <h3><%= "#{@user.name}" %> has not posted anything yet.</h3>
<% end %>

<h2>Comments</h2>
<%= render @user.comments %>

<h2>Favorites</h2>
<%= render partial: "users/favorites", locals: {favorite: @user.favorites}  %>
