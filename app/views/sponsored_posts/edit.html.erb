<h1>Edit Sponsored Post</h1>

<div class="row">
    <div class="col-md-4">
        <ul>
            <li>Tell us about the product you would like to advertise with us.</li>
        </ul>
    </div>

    <div class="col-md-8">
        <%= form_for [@sponsored_post.topic,@sponsored_post]  do |f| %>
            <div class="form_group">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
            </div>

            <div class="form_group">
                <%= f.label :body %>
                <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post content" %>
            </div>

            <div class="form_group">
                <%= f.label :price %>
                <%= f.number_field :price, :class => 'text_field' %>
            </div>

            <div class="form_group">
                <%= f.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>
