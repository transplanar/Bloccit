<h1>Edit Question</h1>

<div class="row">
    <div class="col-md-8">
        <%= form_for @question  do |f| %>
            <div class="form_group">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
            </div>

            <div class="form_group">
                <%= f.label :body %>
                <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
            </div>

            <!-- TODO: May require refactoring -->
            <div class="form_group">
                <%= f.label :resolved %>
                <%= f.check_box :resolved, {}, true, false %>
            </div>


            <div class="form_group">
                <%= f.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>
